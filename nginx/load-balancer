# add to nginx.conf
http {
    upstream backendcluster {
        server localhost:8080;
        server localhost:8081 weight=1;
        server localhost:8082;
    }
}

# alt
upstream backendcluster {
  server localhost:8080;
  server localhost:8081;
  server localhost:8082;
}

server {
    listen 81;
    listen [::]:81;

    server_name 127.0.0.1;
        
    location /lb/ {
        proxy_pass http://backendcluster/lb/;
    }
}